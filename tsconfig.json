{
    "compilerOptions": {
        "outDir": "./build",
        "allowJs": true,
        "target": "es6",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true,
        "sourceMap": true,
        "module": "commonjs",
        "suppressImplicitAnyIndexErrors": true,
        "downlevelIteration": true,
        "lib": [
            "dom",
            "es2015",
            "es2016.array.include",
            "es2017.string",
            "es2017.object"
        ],
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*"
    ]
}